<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}>LILLYDOO AddressBook{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div class="search-bar">
    <form method="GET" action="/contact/search" class="js-sea-search sea-search">
        <input type="search" name="q" placeholder="Search Contacts" autocomplete="off" class="search-input">
    </form>
</div>
<header class="header">
    <a href="/"><img class="logo-icon" src="{{ asset('images/address-book.png') }}"></a>
    <h1 class="logo">LILLYDOO AddressBook</h1>
    <ul class="navi">
        <li class="search"><a href="#" class="js-header-search-toggle"><i class="fa fa-search"></i></a></li>
    </ul>
</header>
<div class="container-fluid">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('info') %}
        <div class="alert alert-info">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('js/jquery-2.1.4.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>
